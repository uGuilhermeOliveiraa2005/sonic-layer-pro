{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "music-layer-pro",
  "version": "0.1.0",
  "identifier": "com.elian.music-layer-pro",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
  {
    "title": "Sonic Layer",
    "width": 400,
    "height": 700,
    "minWidth": 320,  
    "minHeight": 500,
    "resizable": true,     
    "maximizable": true,  
    "fullscreen": false,
    "decorations": false,
    "transparent": true
  }
],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}